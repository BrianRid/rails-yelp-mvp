<div class="container">
  <div class="header d-flex justify-content-between">
  <h1 class="my-3">Find your next place to eat </h1>
  <%= link_to 'Add a new Restaurant' , new_restaurant_path, class: "btn btn-primary my-4" %>

  </div>

  <div class="block d-flex justify-content-between row">
    <% @restaurants.each do |restaurant| %>
    <div class="card mx-3 col-3 mb-3">
      <img src="https://images.unsplash.com/photo-1555396273-367ea4eb4db5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1567&q=80" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.category %></p>
          <p class="card-text"><%= restaurant.address %></p>
          <%= link_to 'Discover More' , restaurant_path(restaurant), class: "btn btn-primary" %>
        </div>
    </div>
    <% end %>
  </div>
</div>



